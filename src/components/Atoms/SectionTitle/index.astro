---
export interface Props {
  element: string;
  titleEn: string;
  titleJp: string;
}

const { element, titleEn, titleJp } = Astro.props;

const Element = element
---

<Element class="section-title">
  <span class="en">{titleEn}</span>
  <span class="jp">{titleJp}</span>
</Element>

<style lang="scss">
  .section-title {
    display: grid;
    gap: 10px;
    text-align: center;

    @media screen and (max-width: 767px) {
      gap: 5px;
    }

    .en {
      font-size: 3.2rem;
      color: var(--color-primary);
      font-weight: bold;

      @media screen and (max-width: 767px) {
        font-size: 3rem;
      }
    }

    .jp {
      font-size: 1.3rem;
      font-weight: bold;

      @media screen and (max-width: 767px) {
        font-size: 1.2rem;
      }
    }
  }
</style>